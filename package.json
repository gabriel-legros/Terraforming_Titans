{
  "name": "terraforming-titans",
  "version": "1.0.0",
  "description": "Terraforming Titans game",
  "scripts": {
    "pretest": "node -e \"process.exit(require('fs').existsSync('node_modules')?0:1)\" || npm ci --no-audit --no-fund",
    "test": "jest"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "jsdom": "^22.1.0"
  },
  "jest": {
    "setupFiles": ["<rootDir>/tests/jestSetup.js"],
    "resolver": "<rootDir>/tests/jestResolver.js",
    "moduleNameMapper": {
      "^.*[\\/]+lib[\\/]+node_modules[\\/]+jsdom$": "<rootDir>/node_modules/jsdom",
      "^\\.\\.\/src\/js\/(physics|phase-change-utils|hydrology|condensation-utils|water-cycle|dry-ice-cycle|hydrocarbon-cycle|zones|terraforming-utils|radiation-utils|terraforming)(?:\\.js)?$": "<rootDir>/src/js/terraforming/$1.js"
    }
  }
}
